# makefile with all content using variables

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o) 
NAME = holberton
RM = rm -r
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(SRC) $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o  $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean: 
	$(RM) $(OBJ)
fclean: 
	$(RM) *~ $(NAME) $(OBJ)
re: clean all
